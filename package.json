{
  "name": "nestjs-meilisearch",
  "version": "3.0.0",
  "description": "Meilisearch integration for nestjs.",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "prebuild": "rimraf lib",
    "build": "rimraf lib && tsc -p tsconfig.build.json",
    "format": "prettier --write '**/*.md' '**/*.json' '**/*.ts' '**/*.yml' .prettierrc",
    "test": "jest",
    "test:cov": "jest --coverage",
    "codecov": "codecov"
  },
  "files": [
    "lib"
  ],
  "repository": "https://github.com/lambrohan/nestjs-meilisearch",
  "keywords": [
    "nestjs",
    "meilisearch"
  ],
  "author": {
    "name": "Rohan Lamb",
    "url": "https://github.com/lambrohan"
  },
  "license": "MIT",
  "private": false,
  "peerDependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "meilisearch": ">=0.31.1 <1.0.0",
    "reflect-metadata": "^0.1.13 || ^0.2.1",
    "rxjs": "^6.0.0 || ^7.8.0"
  },
  "devDependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@eslint/js": "^9.20.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.1",
    "@types/yargs-parser": "^21.0.3",
    "codecov": "^3.8.3",
    "eslint": "^9.20.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "meilisearch": "^0.31.1",
    "prettier": "^3.5.0",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^4.3.0",
    "rxjs": "^7.8.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.23.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/$1"
    }
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "np": {
    "yarn": false,
    "contents": "lib"
  },
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@9.12.2+sha512.22721b3a11f81661ae1ec68ce1a7b879425a1ca5b991c975b074ac220b187ce56c708fe5db69f4c962c989452eee76c82877f4ee80f474cebd61ee13461b6228"
}
